{
    "name": "spelling-bee-extension",
    "version": "4.13.6",
    "author": "Livio Dalloro <livio@dalloro.org>",
    "repository": "https://github.com/dalloro/spelling-bee-extension.git",
    "description": "Chrome extension for the Spelling Bee game",
    "license": "MIT",
    "scripts": {
        "build": "node scripts/build.js",
        "watch": "esbuild popup.js --bundle --outfile=dist/popup_bundle.js --watch",
        "test": "firebase emulators:exec --only firestore \"vitest run\"",
        "generate:dictionary:it": "node scripts/generate-italian-dictionary.js",
        "generate:puzzles:it": "node scripts/generate-italian-puzzles.js"
    },
    "dependencies": {
        "firebase": "^11.1.0"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^7.1.0",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^12.0.2",
        "@semantic-release/npm": "^13.1.3",
        "archiver": "^7.0.1",
        "esbuild": "^0.24.2",
        "firebase-admin": "^13.6.0",
        "jsdom": "^27.4.0",
        "semantic-release": "^25.0.2",
        "vitest": "^4.0.16"
    }
}
